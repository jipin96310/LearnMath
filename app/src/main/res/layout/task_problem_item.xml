<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <TextView

            android:id="@+id/task_problem_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/task_problem_radio"
            android:layout_alignBottom="@+id/task_problem_radio"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/task_problem_radio"
            android:text="problemhead"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/task_problem_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

    </RelativeLayout>







</LinearLayout>